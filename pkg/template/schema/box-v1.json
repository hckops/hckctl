{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schema.hckops.com/box-v1.json",
  "title": "BoxV1",
  "description": "Defines the template of a box",
  "type": "object",
  "properties": {
    "kind": {
      "description": "The type and version of the box",
      "type": "string",
      "const": "box/v1"
    },
    "name": {
      "description": "The name of the box",
      "type": "string"
    },
    "tags": {
      "description": "Tags of the box",
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 1,
      "uniqueItems": true
    },
    "image": {
      "type": "object",
      "properties": {
        "repository": {
          "description": "The repository name of the image",
          "type": "string"
        },
        "version": {
          "description": "The version of the image e.g. latest, sha or tag",
          "type": "string"
        }
      },
      "required": [
        "repository"
      ]
    },
    "shell": {
      "description": "The default shell of the box",
      "type": "string"
    },
    "network": {
      "description": "The network configuration of the box",
      "type": "object",
      "ports": {
        "description": "Ports available from the box",
        "type": "array",
        "items": {
          "type": "string"
        },
        "minItems": 1,
        "uniqueItems": true
      }
    }
  },
  "required": [
    "kind",
    "name",
    "tags",
    "image"
  ]
}
